@{
	ViewData["Title"] = "Home Page";
}
<html>
<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

	<script type="text/javascript">

				<!-- Comienza la funcion que prepara el frame y lo trae con las laminas escondidas y solo se ve la primera -->
		$(document).ready(function(){
			
			setInterval(function() { <!-- Intervalo de tiempo para hacer refresh a la pagina este valor es de 1 segundo -->
			<!----------------------------------------------------Raymond Garcia cambie el margin left antes 600px por que tenia problemas el las animaciones con el responsive ------------------------------------------>
			$('#carousel ul').animate({marginLeft:'-100%'},1000,function(){<!--Crea una variable y en ella lleva el reset a 600px del lado izquierdo para la animacion. -->

				
				$(this).find("li:last").after($(this).find("li:first"));<!--Busca la primera lamina y la ultima para asi desplegarlas en el frame. -->
				$(this).css({marginLeft:0}); <!--Crea variable para modificar el CSS y asi cambiar los defaults de los margenes  -->
				
				});
			},4000);<!--Tiempo de cambio de una a otra este valor es de 4 segundos -->

			});
		</script>  <!--Termina el scrip de Jquery y el Script de desplegar las imagenes -->
</head>
